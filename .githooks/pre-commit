#!/bin/bash

# DOJO-suite pre-commit hook
# Runs swiftformat and swiftlint on staged Swift files

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}Running DOJO-suite pre-commit checks...${NC}"

# Get list of staged Swift files
SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.swift$' || true)

if [ -z "$SWIFT_FILES" ]; then
    echo -e "${YELLOW}No Swift files to check.${NC}"
    exit 0
fi

echo -e "${GREEN}Found Swift files to check:${NC}"
echo "$SWIFT_FILES"

# Check if swiftformat is installed
if ! command -v swiftformat &> /dev/null; then
    echo -e "${RED}Error: swiftformat is not installed.${NC}"
    echo "Install it with: brew install swiftformat"
    exit 1
fi

# Check if swiftlint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${RED}Error: swiftlint is not installed.${NC}"
    echo "Install it with: brew install swiftlint"
    exit 1
fi

# Run swiftformat
echo -e "${GREEN}Running swiftformat...${NC}"
echo "$SWIFT_FILES" | xargs swiftformat --config .swiftformat || true

# Re-add formatted files
echo "$SWIFT_FILES" | xargs git add

# Run swiftlint
echo -e "${GREEN}Running swiftlint...${NC}"
if ! swiftlint lint --strict --quiet; then
    echo -e "${RED}SwiftLint found issues. Please fix them before committing.${NC}"
    exit 1
fi

echo -e "${GREEN}Pre-commit checks passed!${NC}"
exit 0
